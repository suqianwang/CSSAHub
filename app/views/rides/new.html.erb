<script src="/assets/jquery.js" type="text/javascript"></script>
<script src="/assets/jquery_ujs.js" type="text/javascript"></script>
<script>
  $(document).ready(function() {
    $('input[type=radio][class=form_type]').change(function () {
      $('#driver_form').css("display","none");
      $('#passenger_form').css("display","none");
      var fieldToShow = $(this).val();
      console.log($(this).val());
      $("#" + fieldToShow + "_form").css("display","block");
  });
});
</script>
<script>
  window.onload = function (){
      $("#All-day").change(function(){
          $("#start-departure-time").prop("disabled", this.checked);
          $("#end-departure-time").prop("disabled", this.checked);
      });
  };
</script>
<center>
  <h1>Are you a Driver or Passenger?</h1>
    
  <%= form_with model: @ride do |f| %>
    
  <p>
    <%= f.radio_button :role, 'driver', class: 'form_type', id: 'Driver', value: 'driver' %> Driver <br>
    <%= f.radio_button :role, 'passenger', class: 'form_type', id: 'Passenger', value: 'passenger' %> Passenger<br>
  </p>
  
  
  <div id="driver_form">
    <div><h1 class="center p-4">Driver Form</h1></div>
    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :departure, "Depart From:" %>
        <%= f.select :departure, ['Zachry', 'HEB', 'IAH', 'Walmart', 'DPS', 'Rec'] %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :destination, "Destination:" %>
        <%= f.select :destination, ['Zachry', 'HEB', 'IAH', 'Walmart', 'DPS', 'Rec'] %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :start_date, "Departure Date (YYYY-MM-DD)" %>
        <%= f.text_field :start_date, id: 'start-date' %>
        <label> to </label>
        <%= f.text_field :end_date, id: 'end-date' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :start_time, "Departure Time (hh-mm-ss)" %>
        <%= f.text_field :start_time, id: 'start-time' %>
        <label> to </label>
        <%= f.text_field :end_time, id: 'end-time' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :seats, "How many seats are available?" %>
        <%= f.text_field :seats, id: 'seats' %>
      </div>
    </div>
    
    <div class="row justify-content-center">
      <!-- <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">I understand the terms and policy associate with this service</label>
      </div> -->
    </div>
    
    <div class="actions row justify-content-center" style="color:red;" font-size="8px" ><%= flash[:alert] %></div>
  </div>
  
  
  <div id="passenger_form">
    <div><h1 class="center p-4">Passenger Form</h1></div>
    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :departure, "Depart From:" %>
        <%= f.select :departure, ['Zachry', 'HEB', 'IAH', 'Walmart', 'DPS', 'Rec'] %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :destination, "Destination:" %>
        <%= f.select :destination, ['Zachry', 'HEB', 'IAH', 'Walmart', 'DPS', 'Rec'] %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :start_date, "Departure Date (YYYY-MM-DD)" %>
        <%= f.text_field :start_date, id: 'start-date' %>
        <label> to </label>
        <%= f.text_field :end_date, id: 'end-date' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :start_time, "Departure Time (hh-mm-ss)" %>
        <%= f.text_field :start_time, id: 'start-time' %>
        <label> to </label>
        <%= f.text_field :end_time, id: 'end-time' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="form-group col-8">
        <%= f.label :seats, "How many seats do you need?" %>
        <%= f.text_field :seats, id: 'seats' %>
      </div>
    </div>
    
    <div class="row justify-content-center">
      <!-- <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">I understand the terms and policy associate with this service</label>
      </div> -->
    </div>
    
    <div class="actions row justify-content-center" style="color:red;" font-size="8px" ><%= flash[:alert] %></div>
  </div>
    
  <p>
    <%= f.submit %>
  </p>
  <% end %>
</center>
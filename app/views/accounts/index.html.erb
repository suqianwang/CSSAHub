<p id="notice"><%= notice %></p>
<div class="center">
	<h1>Accounts</h1>

	<center>
	<table>
	  <thead>
		<tr>
		  <th>Username</th>
		  <th>Name</th>
		  <th>Email</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @accounts.each do |account| %>
		  <tr>
			<td style="width:auto"><%= account.username %></td>
			<td><%= account.name %></td>
			<td><%= account.email %></td>
			<td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
	</center>
</div>